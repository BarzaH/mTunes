# platform :ios, '9.0'

target 'mTunes' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for mTunes
  pod "PromiseKit", "~> 6.0"
  pod 'Alamofire', '~> 4.7'
  pod 'Localize-Swift', '~> 2.0'
  pod 'Typhoon', '3.5.1'
end

target 'mTunesTests' do
    inherit! :search_paths
    # Pods for testing
    pod "PromiseKit", "~> 6.0"
    pod 'Alamofire', '~> 4.7'
    pod 'Localize-Swift', '~> 2.0'
    pod 'Typhoon', '3.5.1'
end

target 'mTunesUITests' do
    inherit! :search_paths
    # Pods for testing
    pod "PromiseKit", "~> 6.0"
    pod 'Alamofire', '~> 4.7'
    pod 'Localize-Swift', '~> 2.0'
    pod 'Typhoon', '3.5.1'
